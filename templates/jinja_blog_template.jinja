<div class="blog-post">

    <!-- Start: blogpost Hero -->
    <div class="hero">
        <div class="background-image"
            style="background-image: url(/content/dam/splunk-blogs/images/2018/01/security_staff_picks.jpg);"></div>
        <div class="background-blend-multiply" style="background-color:rgba(0,0,0,0.55);"></div>
        <div class="container main-container">
            <div class="row main-row">
                <div class="col-xs-12">
                    <div class="blog-type splunk2-eyebrow">
                        SECURITY
                    </div>
                    <h1 class="splunk2-h2 blog-title">
                        Staff Picks for Splunk Security Reading April 2019
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <!-- End of blogpost hero -->
    <!-- end: author blog list-->
    <!-- start: main content body -->
    <div class="main-body">
        <div class="container">
            <div class="row">
                <div class="col-sm-1 col-sm-offset-1">

                    <div class="blog-post">
                        <div class="social-band">
                            <span class="social-band-title body-small">Share: </span>
                            <ul>
                                <li>
                                    <!-- twitter supports title, url and hashtag -->
                                    <a class="twitter button-wrap social-icon" href="#" title="Share on Twitter"
                                        data-title="Staff Picks for Splunk Security Reading {{ standard.todays_date_no_day }}"
                                        data-url="{{ standard.twitter_link }}" data-hashtag="#splunkBlogs">
                                    </a>
                                </li>
                                <li>
                                    <!-- facebook only support url, facebook will pull data from page url -->
                                    <a class="facebook button-wrap social-icon" href="#" title="Share on Facebook"
                                        data-url="https://www.splunk.com/content/splunk-blogs/en_us/category/security/staff-picks-for-splunk-security-reading-{{ standard.todays_date_no_day_plus_dashes }}.html">
                                    </a>
                                </li>
                                <li>
                                    <!-- linkedIn only supports url linkedin will pull data from page url -->
                                    <a class="linkedin button-wrap social-icon" href="#" title="Share on LinkedIn"
                                        data-url="https://www.splunk.com/content/splunk-blogs/en_us/category/security/staff-picks-for-splunk-security-reading-{{ standard.todays_date_no_day_plus_dashes }}.html">
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>


                </div>
                <div class="col-sm-9">
                    <div class="blog-postdate">
                        <span><a href="/en_us/blog/author/rkovar.html" title="">
                                <img src="{{ blog_author.headshot }}" alt="{{ blog_author.name }}" />
                            </a> By <a class="author-name" href="{{ blog_author.url }}" title="">{{ blog_author.name }}</a>
                            {{ todays_date }}
                        </span>
                    </div>
                    <div class="copy-content splunk-body">

                        <div data-emptytext="Blogs details page content">
                            <center>
                                <table cellpadding="0" cellspacing="0" border="0" style="float: right; margin: 30px;">
                                    <tbody>
                                        <tr>
                                            <td style="text-align: center;"><img
                                                    src="/content/dam/splunk-blogs/images/2018/01/security_staff_picks.jpg"
                                                    height="182" width="170"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </center>
                            {{ standard.intro }}
                            <table border="1" cellspacing="0" cellpadding="0" width="100%">
                                <tbody>
                                    {% for article in articles %}
                                    <tr>
                                        <td width="98" valign="top">
                                            <p style="text-align: center;">
                                                <a href="{{ article.contributor.url }}"
                                                    target="_blank">{{ article.contributor.name }}</a></p>
                                            <p style="text-align: center;"><img
                                                    src="{{ article.contributor.headshot }}"
                                                    width="150"></p>
                                            <p style="text-align: center;"><a href="https://twitter.com/{{ article.contributor.twitter }}"
                                                    target="_blank"><b>@</b>{{ article.contributor.twitter }}</a><br />
                                                {{ article.contributor.witticism }}</p>
                                        </td>
                                        <td width="581" valign="top">
                                            <p style="text-align: center;"><a
                                                    href="{{ article.url }}"
                                                    target="_blank" title="article_title">{{ article.title }} by {{ article.authors|join(', ') }}</a></p>
                                            <p style="text-align: center;">{{ article.summary }}</p>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end: main content body -->


    <!-- start: author bio blurb -->
    <div class="author-intro">
        <div class="container">
            <div class="row">

                <div class="col-sm-4 col-sm-offset-1">
                    <div class="author-image">
                        <img src="{{ blog_author.headshot }}" alt="{{ blog_author.name }}" />
                    </div>
                    <div class="author-handle">
                        <div class="splunk2-eyebrow">Posted by</div>
                        <h4 class="splunk2-h4"><a href="{{ blog_author.url }}" class="author-name">{{ blog_author.name }}</a></h4>
                        <!-- start: social band, links only -->
                        <div class="author-blurb">
                            <div class="social-band">
                                <ul>
                                    <li>
                                        <!-- supports title, url and hashtag -->
                                        <a class="twitter button-wrap social-icon" href="https://twitter.com/{{ blog_author.twitter}}"
                                            target="_blank">
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!-- end: social band, links only -->
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="author-description body-small">
                        <p>{{ blog_author.byline }}</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- end: author bio blurb -->
</div>
<!-- this is optional only need more changes -->