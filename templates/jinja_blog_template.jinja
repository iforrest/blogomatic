<table border="1" cellspacing="0" cellpadding="0" width="100%">
    <tbody>
        {% for article in articles %}
        <tr>
            <td width="98" valign="top">
                <p style="text-align: center;"><a href="{{ blog_author.url }}"
                        target="_blank">{{ article.contributor.name }}</a></p>
                <p style="text-align: center;"><img
                        src="{{ article.contributor.headshot }}" width="150"></p>
                <p style="text-align: center;"><a href="https://twitter.com/{{ article.contributor.twitter }}"
                        target="_blank"><b>@</b>{{ article.contributor.twitter }}</a><br>
                    <p style="text-align: center;">
                        {{ article.contributor.wittycism }}
                    </p>
            </td>
            <td width="581" valign="top">
                <p style="text-align: center;"><a href="{{ article.url }}"
                        target="_blank" title="article_title">{{ article.title }} by {{ article.authors|join(', ') }}</a></p>
                <p style="text-align: center;">{{ article.summary }}</p>
            </td>

        </tr>
        {% endfor %}
    </tbody>
</table>